<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
    
    <div class="container bg-dark p-5">
        <div class="row">
            <div class="col-6 mb-5 d-flex justify-content-center">
                <div class="card w-50 p-5 border-0 bg-secondary" >
                    <img src="/images/<%= results[0].img_user %>" alt="Person 1">                        <div class="card-body">
                      <h5 class="card-title"><%= results[0].name %></h5>
                      <p class="card-text"><%= results[0].description %></p>
                    </div>
                  </div>
                </div>
            <div class="col-6 mb-5 text-white">
                <h3 class="mb-5">Añadir tecnologías</h3>
                <form action="/class/technology/send/<%= results[0].id_users %>" method="post" class="w-50">
                    <div class="form-group">
                        <label for="tech_name">Tecnología</label>
                        <input type="text" name="tech_name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="description_tech">Descripción</label>
                        <input type="text" name="description_tech" class="form-control">
                    </div>
                   
                    <button type="submit" class="btn btn-secondary">Enviar</button>
            </div>
            
                <% results2.forEach(function(tech){ %>
                    <div class="col-12 mb-5 d-flex justify-content-center">
                    <div class="card w-75 p-5 border-0 bg-secondary" >
                          <h5 class="card-title"><%= tech.name %></h5>
                          <p class="card-text"><%= tech.description_tech %></p>
                          <div class="button">
                            <a href="/class/deleteTech/<%= tech.id_tech %>" class="btn btn-dark">Eliminar</a>
                            </div>
                        </div>
                      </div>
                <% }) %>
            
            
            
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
</body>
</html>